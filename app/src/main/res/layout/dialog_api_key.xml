<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/dialog_api_key_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        android:text="@string/api_key" />

    <EditText
        android:id="@+id/dialog_api_key_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <Button
            android:id="@+id/dialog_api_key_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/orange_500"
            android:text="@string/generate"
            android:textColor="@color/white" />
        <ProgressBar
            android:id="@+id/dialog_api_key_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/orange_500"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>



</LinearLayout>